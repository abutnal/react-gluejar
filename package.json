{
  "name": "react-gluejar",
  "version": "1.0.0",
  "description": "Paste images from your clipboard",
  "main": "dist/index.js",
  "repository": "git@github.com:charliewilco/react-glue-jar.git",
  "author": "Charles âš¡ <charlespeters42@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "parcel": "^1.8.1",
    "prettier": "^1.12.1",
    "react-dom": "^16.3.2",
    "serve": "^6.5.7"
  },
  "dependencies": {
    "react": "^16.3.2"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepublish": "yarn bundle",
    "format": "prettier --write ./src/*.js ./example/*.js",
    "example": "parcel example/index.html",
    "bundle": "rm -rf dist && babel src -d dist",
    "now-start": "serve -s dist",
    "now-build": "parcel build ./example/index.html"
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write", "git add"]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "loose": true,
          "targets": {
            "browsers": [">0.5%", "not dead"]
          }
        }
      ],
      "flow",
      "react"
    ],
    "plugins": ["transform-class-properties"]
  },
  "prettier": {
    "printWidth": 95,
    "singleQuote": true,
    "semi": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  },
  "now": {
    "alias": "react-gluejar.now.sh"
  }
}
